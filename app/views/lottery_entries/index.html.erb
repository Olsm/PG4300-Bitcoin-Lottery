<p id="notice"><%= notice %></p>

<h1>Listing Lottery Entries</h1>

<table>
  <thead>
    <tr>
      <th>Transaction Id</th>
      <th>Email</th>
      <th>Bitcoin address</th>
      <th>Amount charged</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lottery_entries.each do |lottery_entry| %>
      <tr>
        <td><%= lottery_entry.transaction_id %></td>
        <td><%= lottery_entry.email %></td>
        <td><%= lottery_entry.bitcoin_address %></td>
        <td><%= lottery_entry.amount_charged %></td>
        <td><%= link_to 'Show', lottery_entry %></td>
        <td><%= link_to 'Edit', edit_lottery_entry_path(lottery_entry) %></td>
        <td><%= link_to 'Destroy', lottery_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

