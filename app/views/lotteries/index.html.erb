<p id="notice"><%= notice %></p>

<h1>Listing Lotteries</h1>

<table>
  <thead>
    <tr>
      <th>Lottery</th>
      <th>Prize amount</th>
      <th>User</th>
      <th>Bitcoin address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lotteries.each do |lottery| %>
      <tr>
        <td><%= lottery.lottery_id %></td>
        <td><%= lottery.prize_amount %></td>
        <td><%= lottery.bitcoin_address %></td>
        <td><%= link_to 'Show', lottery %></td>
        <td><%= link_to 'Edit', edit_lottery_path(lottery) %></td>
        <td><%= link_to 'Destroy', lottery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lottery', new_lottery_path %>
